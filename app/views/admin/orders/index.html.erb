<main id="index">
  <div class="container">
    <div class="row">
      <h3 class="col-md-4 mb-3">注文一覧画面</h3>
      <table  class="col-md-10 offset-md-1 table">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
            <td><%= order.end_user.first_name+order.end_user.last_name %></td>
            <td><%= order.order_items.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</main>
