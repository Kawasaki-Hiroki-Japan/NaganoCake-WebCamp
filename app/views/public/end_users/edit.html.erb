<main id="edit">
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <h3 class="mb-3">マイページ</h3>
        <span>登録情報編集</span>
        <%= link_to "退会する", withdraw_path, class: "btn btn-danger offset-md-1 mr-1" %>
        <%= form_with model: current_end_user, url: "/end_users" do |f| %>
          <table class="table mt-2">
            <tr>
              <th>氏名</th>
              <td><%= current_end_user.first_name + " " + current_end_user.last_name %></td>
            </tr>
            <tr>
              <th>カナ</th>
              <td><%= current_end_user.first_kana + " " + current_end_user.last_kana %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td></td>
            </tr>
            <tr>
              <th>住所</th>
              <td></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email, class: "col-md-12" %></td>
            </tr>
          </table>
          <%= f.submit "編集内容を保存する", class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
  </div>
</main>
