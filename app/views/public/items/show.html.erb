<main id="items-show">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div id="genre-box">
          <p class="center">ジャンル検索</p>
          <hr>
          <ul>
            <li><%= link_to "全商品", items_path %></li>
            <% @genre.each do |g| %>
              <% if g.status == true %>
                <li><%= link_to g.name, items_path(genre_id: g.id) %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
        <div class="row mt-3">
          <div class="col-md-5">
            <%= attachment_image_tag @item, :image, :fill, 270, 162, fallback: "no_image_medium.jpg" %><br>
          </div>
          <div class="col-md-7">
            <h2><%= @item.name %></h2>
            <p><%= @item.body %></p>
            <p class="mt-3"><strong>￥<%= (@item.price*1.1).to_i %></strong><span>（税込）</span></p>
          </div>
        </div>
        <%= form_for(@cart_item, url: "/end_users/items/#{params[:id]}") do |f| %>
          <div class="row field mt-2">
            <div class="select offset-md-6 col-md-2 mr-3">
              <%= f.select :amount, [*1..30] %>
            </div>
            <%= f.submit "カートに入れる", class: "btn btn-info col-md-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
