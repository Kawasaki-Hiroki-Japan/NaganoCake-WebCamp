#index{
  h2 span{ font-size: 0.6em;}
  .add-btn{
    background-color: white;
    border: 1px solid black;
    font-size: 1.5rem;
    font-weight: bold;
    max-height: 40px;
    max-width: 40px;
    border-radius: 20px;
    text-align: center;
    line-height: 38px;
    padding: 0;
  }
}
#new{
  position: relative;

  #img_field{
    font-size: 15px;
    margin-top: 10px;
    padding: 5px 8px;
    border: solid 1px #EDBC6C;
    color: #666;
    position: relative;
    padding: 0;
    cursor: pointer;
    width: 300px;
    height: 180px;
    background-image: url("<%= asset_path('no_image.jpg') %>");
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    background-color: #fff;
    overflow: hidden;
    box-sizing: border-box;
    transition: 0.3s ease-out;
  }
  .btn.add{
    position: absolute;
    bottom: -50px;
  }
  .row.field{
    margin: 10px 0;
  }
  .redio_area{
    background-color: white;
    border: 1px solid black;
    padding-top: 10px;
  }
  .select{
    overflow: hidden;
    width: 90%;
    text-align: center;
  	position: relative;
  	border: 1px solid black;
  	border-radius: 2px;
  	background: white;
  }
  .select::before{
  	position: absolute;
  	top: -webkit-calc(50% - 3px);
    top: calc(50% - 3px);
  	right: 0.9em;
  	width: 0;
  	height: 0;
  	padding: 0;
  	content: '';
  	border-left: 6px solid transparent;
  	border-right: 6px solid transparent;
  	border-top: 6px solid black;
  	pointer-events: none;
  }
  .select:after{
  	position: absolute;
  	top: 0;
  	right: 2.5em;
  	bottom: 0;
  	width: 1px;
  	content: '';
  	border-left: 1px solid black;
  }
  select{
    position: absolute;
    left: 0;
    width: 100%;
    padding-right: 1em;
    cursor: pointer;
    border: none;
    outline: none;
    background: transparent;
    background-image: none;
    box-shadow: none;
    -webkit-appearance: none;
    appearance: none;
    padding: 4px 8px;
  }
  select::-ms-expand{
      display: none;
  }
  input, textarea{
    border: 1px solid black;

    &:focus{
      outline: none
    }
  }
}
